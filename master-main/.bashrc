function swap()
{ # Swap 2 filenames around, if they exist (from Uzi's bashrc).
    local TMPFILE=tmp.$$

    [ $# -ne 2 ] && echo "swap: 2 arguments needed" && return 1
    [ ! -e $1 ] && echo "swap: $1 does not exist" && return 1
    [ ! -e $2 ] && echo "swap: $2 does not exist" && return 1

    mv "$1" $TMPFILE
    mv "$2" "$1"
    mv $TMPFILE "$2"
}



#
# File Extraction Commands
#

x(){
    if [ -f $1 ] ; then
        case $1 in
            *.tar.bz2)   tar xvjf $1    ;;
            *.tar.gz)    tar xvzf $1    ;;
            *.bz2)       bunzip2 $1     ;;
            *.rar)       unrar x $1     ;;
            *.gz)        gunzip $1      ;;
            *.tar)       tar xvf $1     ;;
            *.tbz2)      tar xvjf $1    ;;
            *.tgz)       tar xvzf $1    ;;
            *.zip)       unzip $1       ;;
            *.Z)         uncompress $1  ;;
            *.7z)        7z x $1        ;;
            *)           echo "Unable to extract '$1'" ;;
        esac
    else
        echo "'$1' is not a valid file"
    fi
}



#
# DLP Notes Implementation
#
# Add way to save small notes about the current directory
#

notes()
{
    unset NOTELOC
    if [ $# -eq 1 ]; then
        NOTELOC="$1"/
    else
        NOTELOC=./
    fi

    # Echo a nice message about the directory
    if [ -f "$NOTELOC".dlp_cdnotes ]; then
      cat "$NOTELOC".dlp_cdnotes
      echo
    fi

    if [ -f "$NOTELOC".dlp_dirnotes ]; then
      cat "$NOTELOC".dlp_dirnotes
    else
      echo "No Notes Found"
    fi  
}

alias vinotes='vim .dlp_cdnotes'
alias vidirnotes='vim .dlp_dirnotes'



